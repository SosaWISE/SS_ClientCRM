div(class="layer",style="width:300px;height:250px")
  div(data-bind="if:cmdAdd.busy")
    div(class="spinner-wrap white", data-bind="template:'tmpl-spinner',active:true")

  div(class="content")
    span(data-bind="text:nextName")
    ul(class="edit-form")
      li
        span(class="label") Question Meaning
        div(data-bind="template:{name:qmComboVM.viewTmpl,data:qmComboVM}")

  div(class="actions")
    ul(class="sv")
      li
        a(class="btn",data-bind="click:clickCancel") Cancel
      li
        a(class="btn",data-bind="cmd:cmdAdd") Add Question
