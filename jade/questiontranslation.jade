div(class="q-translation")
  div(data-bind="if:saving")
    div(class="spinner-wrap black", data-bind="template:'tmpl-spinner',active:true")

  div(class="locale")
    span(data-bind="text:LocalizationCode")
    |:
  div(data-bind="visible:!editorVM()")
    a(title="edit language",data-bind="click:clickEdit")
      span(data-bind="text:qtData.TextFormat")
  div(data-bind="with:editorVM")
    div(data-bind="template:viewTmpl")
    div(class="actions")
      ul(class="sv")
        li(data-bind="click:$parent.clickEndEdit")
          a(class="btn")
            span Cancel
        li(data-bind="click:$parent.clickSave")
          a(class="btn")
            span Save
