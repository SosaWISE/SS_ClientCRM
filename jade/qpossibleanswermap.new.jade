div(class="layer", data-bind="width:300,height:250")
  div(data-bind="if:cmdAdd.busy")
    div(class="spinner-wrap white", data-bind="template:'tmpl-spinner',active:true")

  div(class="content")
    ul(class="edit-form")
      li
        span(class="label") Possible Answer
        div(data-bind="template:{name:paComboVM.viewTmpl,data:paComboVM}")

  div(class="actions")
    ul(class="sv")
      li
        a(class="btn",data-bind="click:clickCancel") Cancel
      li
        a(class="btn",data-bind="cmd:cmdAdd") Map Possible Answer
