div(class="layer", data-bind="width:300,height:155")
  div(data-bind="if:saving")
    div(class="spinner-wrap white", data-bind="template:'tmpl-spinner',active:true")

  div(class="content")
    ul(class="edit-form")
      li
        span(class="label") Question Meaning
        input(type="text",data-bind="ukov:qmData.Name,value:qmData.Name,valueUpdate:'keyup'")

  div(class="actions")
    ul(class="sv")
      li
        a(class="btn",data-bind="click:clickCancel") Cancel
      li
        a(class="btn",data-bind="click:clickAdd") Add Meaning
