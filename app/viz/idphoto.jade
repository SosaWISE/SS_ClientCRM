div(class="viz-idphoto",data-bind="dropimg:setImage")
  //- h2(class="title",data-bind="text:title")
  h2(class="help",data-bind="") drag and drop photo below

  div(class="controls")
    ul(class="actions")
      li
        a(class="btn fa fa-rotate-left fa-2x",tabindex="0",title="Rotate Left",data-bind="cmd:cmdRotateLeft")
      li
        a(class="btn fa fa-rotate-right fa-2x",tabindex="0",title="Rotate Right",data-bind="cmd:cmdRotateRight")
    //- ul(class="actions right")
      li
        <!-- ko if:!videoData() -->
        a(class="btn",tabindex="0",data-bind="cmd:cmdStartCamera") Take Picture
        <!-- /ko -->
        <!-- ko if:videoData -->
        a(class="btn",tabindex="0",data-bind="cmd:cmdStopCamera") Stop Picture
        <!-- /ko -->


  div(class="vizual")
    <!-- ko with:videoData -->
    video(width="600",height="600",autoplay,data-bind="video:$data")
    <!-- /ko -->
    div(data-bind="pixi:pixi")

  div(style="margin-top:10px;")
    a(class="btn-bg",tabindex="0",data-bind="cmd:cmdSave") Save Image
