div(class="hr-search teams")
  table(class="fh-wrap")
    tr
      td(class="fh-header relative")
        div(class="search-form")
          ul(class="edit-form cf")
            li
              span(class="label") Team ID
              input(type="text", placeholder="",
                data-bind="ukov:data.TeamID,value:data.TeamID,valueUpdate:'keyup',enter:cmdSearch,select:focusFirst")
            li
              span(class="label") Team Name
              input(type="text", placeholder="",
                data-bind="ukov:data.TeamName,value:data.TeamName,valueUpdate:'keyup',enter:cmdSearch")
            li
              span(class="label") Office Name
              input(type="text", placeholder="",
                data-bind="ukov:data.OfficeName,value:data.OfficeName,valueUpdate:'keyup',enter:cmdSearch")
            li
              span(class="label") Season
              div(data-bind="cvm:data.SeasonCvm")
            //- li
              span(class="label") Season Name
              input(type="text", placeholder="",
                data-bind="ukov:data.SeasonName,value:data.SeasonName,valueUpdate:'keyup',enter:cmdSearch")
            li
              span(class="label") City
              input(type="text", placeholder="",
                data-bind="ukov:data.City,value:data.City,valueUpdate:'keyup',enter:cmdSearch")
            li
              span(class="label") State
              input(type="text", placeholder="",
                data-bind="ukov:data.StateAB,value:data.StateAB,valueUpdate:'keyup',enter:cmdSearch")
            li
              span(class="label") Team Role
              input(type="text", placeholder="",
                data-bind="ukov:data.RoleLocationID,value:data.RoleLocationID,valueUpdate:'keyup',enter:cmdSearch")

        div(class="actions")
          a(class="btn",tabindex="0",data-bind="cmd:cmdSearch") Search
          a(class="btn",tabindex="0",data-bind="cmd:clickClear") Clear

    tr
      td(class="fh-body")
        div(class="fh-contents")
          div(class="grid-wrap")
            div(class="slickgrid",style="background:white;margin:10px;color:black",
              data-bind="slickgrid:gvm")

          div(data-bind="spinner:cmdSearch.busy,spinner-rgb:'white'")

div(data-bind="spinner:active()&&!loaded(),spinner-rgb:'white'")
