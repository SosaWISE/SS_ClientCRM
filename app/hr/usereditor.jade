div(class="user-data")
  ul(class="actions")
    li
      a(class="btn",tabindex="0",data-bind="cmd:clickSave") Save
    li
      a(class="btn",tabindex="0",data-bind="cmd:clickCancel") Cancel

  div(class="content-wrap")
    div(class="col")
      div(class="section")
        span(class="title") Login Info
        div(class="contents")
          ul(class="edit-form")
            li
              span(class="label") Email/Username
              input(type="text",placeholder="",data-bind="hasfocus:focusFirst,ukov:data.Email,value:data.Email,valueUpdate:'keyup'")
            li
              span(class="label") Password
              input(type="text",placeholder="",data-bind="ukov:data.Password,value:data.Password,valueUpdate:'keyup'")


      div(class="section")
        span(class="title") General Info
        div(class="contents")
          ul(class="edit-form")
            li
              span(class="label") CompanyID
              input(type="text",placeholder="",data-bind="ukov:data.GPEmployeeID,value:data.GPEmployeeID,valueUpdate:'keyup'")
            li
              span(class="label") Employee Type
              div(data-bind="cvm:data.UserEmployeeTypeCvm")
            li(class="full")
              span(class="label") Name
              input(class="name",type="text",placeholder="",data-bind="ukov:data.FirstName,value:data.FirstName,valueUpdate:'keyup'")
              input(class="mname",type="text",placeholder="",data-bind="ukov:data.MiddleName,value:data.MiddleName,valueUpdate:'keyup'")
              input(class="name",type="text",placeholder="",data-bind="ukov:data.LastName,value:data.LastName,valueUpdate:'keyup'")
            li
              span(class="label") Preferred Name
              input(type="text",placeholder="",data-bind="ukov:data.PreferredName,value:data.PreferredName,valueUpdate:'keyup'")
            li
              span(class="label") SSN
              input(type="text",placeholder="",data-bind="ukov:data.SSN,value:data.SSN,valueUpdate:'keyup'")
            li
              span(class="label") Shirt Size
              div(data-bind="cvm:data.ShirtSizeCvm")
            li
              span(class="label") Hat Size
              div(data-bind="cvm:data.HatSizeCvm")
            li
              span(class="label") Gender
              div(data-bind="cvm:data.SexCvm")
            li
              //-
            li
              span(class="label") Marital Status
              div(data-bind="cvm:data.MaritalStatusCvm")
            li
              span(class="label") Spouse Name
              input(type="text",placeholder="",data-bind="ukov:data.SpouseName,value:data.SpouseName,valueUpdate:'keyup'")


      div(class="section")
        span(class="title") Contact Info
        div(class="contents")
          ul(class="edit-form")
            li
              span(class="label") Cell Phone
              input(type="text",placeholder="",data-bind="ukov:data.PhoneCell,value:data.PhoneCell,valueUpdate:'keyup'")
            li
              span(class="label") Provider
              div(data-bind="cvm:data.PhoneCellCarrierCvm")
            li
              span(class="label") Home Phone
              input(type="text",placeholder="",data-bind="ukov:data.PhoneHome,value:data.PhoneHome,valueUpdate:'keyup'")


      div(class="section")
        span(class="title") Place of Birth
        div(class="contents")
          ul(class="edit-form")
            li
              span(class="label") DOB
              input(type="text",placeholder="",data-bind="ukov:data.BirthDate,datevalue:data.BirthDate,valueUpdate:'keyup'")
            li
              span(class="label") Country
              input(type="text",placeholder="",data-bind="ukov:data.BirthCountry,value:data.BirthCountry,valueUpdate:'keyup'")
            li
              span(class="label") City
              input(type="text",placeholder="",data-bind="ukov:data.BirthCity,value:data.BirthCity,valueUpdate:'keyup'")
            li
              span(class="label") State
              input(type="text",placeholder="",data-bind="ukov:data.BirthState,value:data.BirthState,valueUpdate:'keyup'")


      div(class="section")
        span(class="title") Driver's License
        div(class="contents")
          ul(class="edit-form")
            li
              span(class="label") Number
              input(type="text",placeholder="",data-bind="ukov:data.DLNumber,value:data.DLNumber,valueUpdate:'keyup'")
            li
              span(class="label") State
              input(type="text",placeholder="",data-bind="ukov:data.DLState,value:data.DLState,valueUpdate:'keyup'")
            li
              span(class="label") Expiration
              input(type="text",placeholder="",data-bind="ukov:data.DLExpiration,value:data.DLExpiration,valueUpdate:'keyup'")


      //- div(class="section")
        span(class="title") Documentation
        div(class="contents")
          ul(class="edit-form")
            li
              span(class="label") Right to Work
              input(type="text",placeholder="",data-bind="ukov:data.RightToWorkStatusID,value:data.RightToWorkStatusID,valueUpdate:'keyup'")
            li
              span(class="label") RightToWorkExpirationDate
              input(type="text",placeholder="",data-bind="ukov:data.RightToWorkExpirationDate,value:data.RightToWorkExpirationDate,valueUpdate:'keyup'")
            li
              span(class="label") Notes
              input(type="text",placeholder="",data-bind="ukov:data.RightToWorkNotes,value:data.RightToWorkNotes,valueUpdate:'keyup'")


