div(data-bind="spinner:cmdSave.busy,spinner-rgb:'black'")

div(class="locale")
  span(data-bind="text:LocalizationCode")
  |:
div(data-bind="visible:!editorVM()")
  a(title="edit language",class="edit",data-bind="cmd:cmdEdit")
    pre(data-bind="text:qtData.TextFormat()||'[No Translation]'")
div(data-bind="with:editorVM")
  div(data-bind="template:viewTmpl")
  div(class="actions")
    ul(class="sv")
      li(data-bind="click:$parent.clickEndEdit")
        a(class="btn")
          span Cancel
      li(data-bind="cmd:$parent.cmdSave")
        a(class="btn")
          span Save
