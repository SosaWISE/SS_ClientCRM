table(class="question takequestion",data-bind="toggle:{'complete':isComplete}")
  tr
    td(class="title")
      h2(data-bind="text:name")
    td(class="content")
      div(class="md-html",data-bind="html:html")
    td(class="answers")
      div(data-bind="if:answerMode==='answered'")
        span(data-bind="text:answer")
      div(data-bind="if:answerMode==='radiolist'")
        div(style="white-space:nowrap;",data-bind="foreach:questionPossibleAnswerMaps")
          a(class="btn small",data-bind="click:$parent.clickAnswer,active:$parent.answer()===text,text:text")
          |&nbsp;
      div(data-bind="if:answerMode==='combo'")
        div(style="min-width:75px;",data-bind="cvm:cvm")
      div(data-bind="if:answerMode==='text'")
        input(type="text",data-bind="ukov:answer,value:answer,valueUpdate:'keyup'")

  tr(data-bind="visible:showSubs")
    td
    td(colspan="2")
      div(data-bind="foreach:questions")
        //- begin question recursion
        div(class="relative",data-bind="template:'tmpl-takequestion'")
