div(class="notice-wrap", data-bind="foreach:list,toggle:{top:atTop},visible:list().length")
  div(data-bind="notice:$data", class="notice-item-wrap")
    div(class="notice-item")
      span(data-bind="attr:{'class':'ico '+type}")
      span(class="seconds",data-bind="text:seconds")
      span(class="title", data-bind="text:title")
      div(class="actions-wrap")
        ul(class="actions", data-bind="foreach:actions")
          li
            a(data-bind="text:name,click:action")
      span(class="url", data-bind="text:url,visible:url")
      div(class="content-wrap")
        div(class="content")
          <!-- ko if:pre -->
          pre(class="msg", data-bind="text:message")
          <!-- /ko -->
          <!-- ko if:!pre -->
          span(class="msg", data-bind="text:message")
          <!-- /ko -->

div(class="layers", data-bind="template:{name:layersVm.viewTmpl,data:layersVm}")
