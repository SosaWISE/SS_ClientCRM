  div(class="bl-item-sibling",data-bind="drop:{accept:'.bl-drag-item',onDropName:'onDropSibling'}")

  div(class="bl-item-wrap")
    div(class="bl-item")
      div(class="first")
        span(class="drag-hdl")
      div(class="name")
        span(class="title",data-bind="text:item.Name")
        span(class="description",data-bind="text:item.Description")
      div(class="last")
        span(class="pts",data-bind="text:points")
        span(class="owner") ???

      div(class="tasks",data-bind="foreach:childs")
        div(class="task-wrap")
          div(class="task")
            span(data-bind="text:Name")
