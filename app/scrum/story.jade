div(class="story bl-drag-item",data-bind="drag:{}")
  div(class="bl-item-sibling",data-bind="drop:{accept:'.bl-drag-item',onDrop:'onDropSibling'}")

  div(class="bl-item-wrap")
    div(class="bl-item")
      div(class="first")
        span(class="drag-hdl")
        span(class="btn edit",data-bind="cmd:cmdEdit") Edit
        span(class="btn add",data-bind="cmd:cmdEdit") Child
      div(class="middle")
        //- span(class="title",data-bind="text:item.ID")
        span(class="title",data-bind="text:item.Name")
        span(class="description",data-bind="text:item.Description")
      div(class="last")
        span(class="pts",data-bind="text:points")
        span(class="owner") ???

      div(class="tasks",data-bind="foreach:tasks")
        div(class="task-wrap")
          div(class="task")
            span(data-bind="text:item.Name")

