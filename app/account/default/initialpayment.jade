div(class="initialpayment")
  div(class="col")
    //- ,style="margin-left:10px;margin-right:30px;")
    div(class="section")
      span(class="title") Initial Payment Breakdown
      //- div(class="contents",data-bind="with:repModel")
        div(data-bind="template:viewTmpl")
    div(class="section",data-bind="cmd:cmdPaymentMethod,toggle:{empty:!paymentMethod()}")
      span(class="title") Initial Payment Method
      div(class="contents",data-bind="with:paymentMethod")
        div(data-bind="template:viewTmpl")
    //- div(class="section",data-bind="cmd:cmdCustomer,toggle:{empty:!customerModel()}")
      span(class="title") Recurring Payment Method
      div(class="contents",data-bind="with:customerModel()&&creditModel()")
        div(data-bind="template:viewTmpl")
    //- div(class="section",data-bind="cmd:cmdCustomer,toggle:{empty:!customerModel()}")
      span(class="title") Billing Address
      div(class="contents",data-bind="with:customerModel()&&creditModel()")
        div(data-bind="template:viewTmpl")

  span(class="btn small",tabindex="0",data-bind="cmd:cmdRunPayment") Run Payment
