div(class="alarmdotcom-swapmodem")
  h2(class="title") Swap Alarm.Com Modem

  div(class="line-top")
    ul(class="edit-form")
      li
        span(class="label") New Serial #
        input(type="text",placeholder="",
          data-bind="ukov:data.NewSerialNumber,value:data.NewSerialNumber,valueUpdate:'keyup',select:focusFirst")

  div(class="actions")
    span(class="btn-bg", tabindex="0", data-bind="cmd:cmdSwap") Swap

  div(data-bind="spinner:cmdSwap.busy,spinner-rgb:'white'")
